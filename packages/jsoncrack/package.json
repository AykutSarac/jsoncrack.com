{
  "name": "jsoncrack-react",
  "version": "1.0.0",
  "description": "Reusable JSON Crack canvas as a React component",
  "license": "SEE LICENSE IN LICENSE.md",
  "author": "Aykut SaraÃ§",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
